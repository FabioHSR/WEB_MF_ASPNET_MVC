@model ClienteViewModel
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Cliente</h2>


<div class="row">
    <div class="col-md-4">
        <form action="Salvar" method="post">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <input type="hidden" name="Id" value="@Model.Id" />


            <label asp-for="Fantasia" class="control-label">Fantasia</label>
            <input asp-for=Fantasia value="@Model.Fantasia" class="form-control" />
            <span asp-validation-for="Fantasia" class="text-danger"></span>
            <br />

            <label asp-for="Representante" class="control-label">Representante</label>
            <select asp-for="Representante" asp-items="ViewBag.Representantes" class="form-control"> </select>
            <span asp-validation-for="Representante" class="text-danger"></span>
            <br />

            <label asp-for="Envio" class="control-label">Envio</label>
            <select asp-for="Envio" asp-items="ViewBag.TiposEnvio" class="form-control"> </select>
            <span asp-validation-for="Envio" class="text-danger"></span>
            <br />

            <label asp-for="Obs" class="control-label">Observações</label>
            <input type="text" Name="Obs" value="@Model.Obs" class="form-control" />
            <span asp-validation-for="Obs" class="text-danger"></span>
            <br />

            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar à lista</a>
</div>
