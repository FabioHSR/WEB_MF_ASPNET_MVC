@model List<ConsultaViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de maiores produções por cliente</h2>

<form asp-action="Filtra" method="post">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label Name="Orientacao" class="control-label">OsTipo</label>
                <select Name="Orientacao" asp-items="@ViewBag.Orientacoes" class="form-control"> </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label Name="OsTipo" class="control-label">OsTipo</label>
                <select Name="OsTipo" asp-items="@ViewBag.Tipos" class="form-control"> </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="Tecnologia" class="control-label">Tecnologia</label>
                <select Name="Tecnologia" asp-items="@ViewBag.Tecnologias" class="form-control"> </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Buscar" class="btn btn-default" />
    </div>
</form>


<br />

<table class="table table-responsive">
    <tr>
        <th>Cliente</th>
        <th>Total Produzido</th>
    </tr>

    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NomeCliente</td>
            <td>@item.TotalProduzido</td>
        </tr>
    }
</table>

<script src="~/js/site.js"></script>
